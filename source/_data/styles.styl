// 强制修改行内代码颜色（sp, s0, fp 等）
code {
  color: #ff0000 !important;      // 鲜红色，一眼就能看出变化
  background: #fff5f5 !important;
  border: 1px solid #ffcccc !important;
}

// 修改引用块（你图片里的“用途”块）
blockquote {
  border-left: 5px solid #ff5722 !important;
  background-color: #fdfdfd !important;
  padding: 15px !important;
  color: #333 !important;
  border-radius: 4px;
}

// 增加标题下方横线
h2, h3 {
  border-bottom: 2px solid #333 !important;
  padding-bottom: 5px;
}

// 同分类文章导航
.post-category-nav {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px dashed #ccc;
}

.category-nav-title {
  font-size: 1.1em !important;
  border-bottom: none !important;
  margin-bottom: 10px;

  a {
    color: inherit;
    &:hover {
      color: #fc6423;
    }
  }

  i {
    margin-right: 6px;
  }
}

.category-nav-list {
  padding-left: 1.5em;
  margin: 0;
  line-height: 2;

  .category-nav-item {
    font-size: 0.9em;

    a {
      color: #555;
      &:hover {
        color: #fc6423;
      }
    }

    &.current {
      span {
        color: #fc6423;
        font-weight: bold;
      }
    }
  }
}
